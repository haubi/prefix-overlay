#!/usr/bin/env bash
# Copyright Gentoo Foundation 2006-2007

cd /tmp
patch=${1##*\/}
wget $1 -O $patch
less $patch
e=$(grep -o "/[^-]*-[^/]*/[^/]*/[^/]*.ebuild" $patch | head -n 1 | sed -e "s:^/::")
catpkg=${e%/*}
ebuild=${e##*/}
cd -
ecopy $catpkg $ebuild
cd $catpkg
patch -p1 < /tmp/$patch
cd ../../
ecommit $catpkg
