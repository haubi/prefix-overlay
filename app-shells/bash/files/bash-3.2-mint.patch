diff -ur bash-3.2/lib/readline/terminal.c bash-3.2-mint/lib/readline/terminal.c
--- bash-3.2/lib/readline/terminal.c	Thu Sep 28 14:11:10 2006
+++ bash-3.2-mint/lib/readline/terminal.c	Wed Feb  6 18:41:20 2008
@@ -641,7 +641,7 @@
 int
 rl_crlf ()
 {
-#if defined (NEW_TTY_DRIVER)
+#if defined (NEW_TTY_DRIVER) || defined (__MINT__)
   if (_rl_term_cr)
     tputs (_rl_term_cr, 1, _rl_output_character_function);
 #endif /* NEW_TTY_DRIVER */
diff -ur bash-3.2/Makefile.in bash-3.2-mint/Makefile.in
--- bash-3.2/Makefile.in	2008-07-01 09:07:19.000000000 +0100
+++ bash-3.2-mint/Makefile.in	2008-07-01 09:07:35.000000000 +0100
@@ -522,6 +522,7 @@
 	$(RM) $@
 	$(PURIFY) $(CC) $(BUILTINS_LDFLAGS) $(LIBRARY_LDFLAGS) $(LDFLAGS) -o $(Program) $(OBJECTS) $(LIBS)
 	ls -l $(Program)
